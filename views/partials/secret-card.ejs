<% const displayName = obj.username || 'User'; %>
<% const color = obj.avatarColor || '#78909C'; %>
<% const liked = !!obj.liked; %>
<% const likeCount = obj.likeCount || 0; %>
<% const cat = obj.secret.aiCategory || 'Other'; %>
<% const catIcon = {
  Work: 'briefcase',
  Family: 'people',
  Finance: 'currency-rupee',
  Health: 'heart-pulse',
  School: 'book',
  Advice: 'chat-dots',
  Confession: 'emoji-frown',
  Other: 'tag'
}[cat] || 'tag'; %>

<div class="card card-hover shadow-sm">
  <div class="card-body">
    <div class="d-flex gap-3">
      <!-- Avatar -->
      <div class="avatar flex-shrink-0" style="background:<%= color %>">
        <%= displayName.charAt(0).toUpperCase() %>
      </div>

      <div class="w-100">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-start">
          <div class="fw-semibold text-primary"><%= displayName %></div>
          <div class="meta text-nowrap text-muted small">
            <% if (obj.secret.createdAt) { %>
              <i class="bi bi-clock"></i>
              <%= new Date(obj.secret.createdAt).toLocaleString("en-IN", { dateStyle: "medium", timeStyle: "short" }) %>
            <% } %>
          </div>
        </div>

        <!-- Summary -->
        <div class="mt-2 mb-2">
          <span class="badge bg-secondary-subtle text-secondary-emphasis me-2">
            <i class="bi bi-stars"></i> Summary
          </span>
          <% if (obj.secret.aiSummary && obj.secret.aiSummary.trim()) { %>
            <span class="text-secondary"><%= obj.secret.aiSummary %></span>
          <% } else { %>
            <span class="text-muted fst-italic">Processingâ€¦</span>
          <% } %>
        </div>

        <!-- Text -->
        <div class="mb-2"><%= obj.secret.text || '' %></div>

        <!-- Category / AI source -->
        <div class="d-flex align-items-center gap-2">
          <span class="badge bg-light text-dark border">
            <i class="bi bi-<%= catIcon %>"></i> <%= cat %>
          </span>
          <% if (obj.secret.aiSource) { %>
            <span class="badge bg-light text-muted border">
              <i class="bi bi-cpu"></i> <%= obj.secret.aiSource %>
            </span>
          <% } %>
        </div>

        <div class="separator"></div>

        <!-- Actions -->
        <div class="d-flex gap-2 justify-content-end">
          <% if (obj.userId && currentUserId && obj.userId.toString() === currentUserId.toString()) { %>
            <!-- Delete -->
            <form action="/delete" method="post" onsubmit="return confirm('Delete this secret?')">
              <input type="hidden" name="secretId" value="<%= obj.secret._id %>">
              <button class="btn btn-ghost btn-sm" type="submit">
                <i class="bi bi-trash"></i> Delete
              </button>
            </form>
          <% } %>

          <!-- Like -->
          <button class="btn btn-soft btn-sm like-btn"
                  data-id="<%= obj.secret._id %>"
                  aria-pressed="<%= liked ? 'true' : 'false' %>">
            <i class="bi bi-heart<%= liked ? '-fill' : '' %>"></i>
            <span class="count"><%= likeCount %></span>
          </button>

          <% if (obj.userId && currentUserId && obj.userId.toString() === currentUserId.toString()) { %>
            <!-- Refresh AI -->
            <form class="refresh-form" action="/ai/refresh" method="post">
              <input type="hidden" name="secretId" value="<%= obj.secret._id %>">
              <button class="btn btn-soft btn-sm" type="submit">
                <i class="bi bi-arrow-clockwise"></i>
                <span class="label">
                  <%= (obj.secret.aiSummary && obj.secret.aiSummary.trim()) ? 'Refresh Summary' : 'Add Summary' %>
                </span>
                <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
              </button>
            </form>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
