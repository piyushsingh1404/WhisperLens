<%
const displayName = obj.username || 'User';
const color       = obj.avatarColor || '#78909C';
const s           = obj.secret || {};
const cat         = s.aiCategory || 'Other';
const isOwner     = String(obj.userId || '') === String(currentUserId || '');
const catIcon = ({
  Work: 'briefcase',
  Family: 'people',
  Finance: 'currency-rupee',
  Health: 'heart-pulse',
  School: 'book',
  Advice: 'chat-dots',
  Confession: 'emoji-frown',
  Other: 'tag'
}[cat]) || 'tag';

let when = '';
if (s.createdAt) {
  try { when = new Date(s.createdAt).toLocaleString('en-IN', { dateStyle: 'medium', timeStyle: 'short' }); } catch(_) {}
}
%>

<div class="card card-hover shadow-sm">
  <div class="card-body">
    <div class="d-flex gap-3">
      <div class="avatar flex-shrink-0" style="background:<%= color %>">
        <%= displayName.charAt(0).toUpperCase() %>
      </div>

      <div class="w-100">
        <div class="d-flex justify-content-between align-items-start">
          <div class="fw-semibold text-primary"><%= displayName %></div>
          <% if (when) { %>
            <div class="meta text-nowrap text-muted small"><i class="bi bi-clock"></i> <%= when %></div>
          <% } %>
        </div>

        <div class="mt-2 mb-2">
          <span class="badge bg-secondary-subtle text-secondary-emphasis me-2">
            <i class="bi bi-stars"></i> Summary
          </span>
          <% if ((s.aiSummary || '').trim()) { %>
            <span class="text-secondary"><%= s.aiSummary %></span>
          <% } else { %>
            <span class="text-muted fst-italic">Processingâ€¦</span>
          <% } %>
        </div>

        <div class="mb-2" style="white-space: pre-wrap;"><%= s.text || '' %></div>

        <div class="d-flex align-items-center gap-2">
          <span class="badge bg-light text-dark border">
            <i class="bi bi-<%= catIcon %>"></i> <%= cat %>
          </span>
          <% if (s.aiSource) { %>
            <span class="badge bg-light text-muted border"><i class="bi bi-cpu"></i> <%= s.aiSource %></span>
          <% } %>
        </div>

        <div class="separator"></div>

        <!-- Only Delete + Refresh (no Like) -->
        <div class="d-flex gap-2 justify-content-end">
          <% if (isOwner) { %>
            <form action="/delete" method="post" onsubmit="return confirm('Delete this secret?')">
              <input type="hidden" name="secretId" value="<%= String(s._id) %>">
              <button class="btn btn-ghost btn-sm" type="submit">
                <i class="bi bi-trash"></i> Delete
              </button>
            </form>
          <% } %>

          <% if (isOwner) { %>
            <form class="refresh-form" action="/ai/refresh" method="post">
              <input type="hidden" name="secretId" value="<%= String(s._id) %>">
              <button class="btn btn-soft btn-sm" type="submit" title="Re-run AI summary">
                <i class="bi bi-arrow-clockwise"></i>
                <span class="label"><%= (s.aiSummary || '').trim() ? 'Refresh Summary' : 'Add Summary' %></span>
                <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
              </button>
            </form>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
